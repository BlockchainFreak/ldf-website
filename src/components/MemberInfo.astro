---
interface Props {
    name: string;
    title: string;
    quote: string;
    email: string;
}

const { name, title, quote, email } = Astro.props
---

<div class="flex flex-col gap-6 w-80">
    <div class="font-primary">
        <h3 class="text-4xl font-bold mb-4">{name}</h3>
        <h4 class="text-[#BFB9FA] italic text-3xl font-normal">{title}</h4>
    </div>
    <quote>{quote}</quote>
    <p class="underline">{email}</p>
</div>